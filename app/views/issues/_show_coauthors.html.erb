<% coauthors_organizations = @issue.coauthors_organizations %>
<% if coauthors_organizations.present? %>
  <% label = coauthors_organizations.size > 1 ? l(:shared_with_these_organizations) : l(:shared_with_this_organization) %>
  <%= label %> <%= coauthors_organizations.map { |o| link_to_organization(o, link_ancestors: false, title: o.users.active.map(&:to_s).join(', ')) }.to_sentence.html_safe %>
<% end %>
